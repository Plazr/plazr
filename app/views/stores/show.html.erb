<h1><%= @store.name %></h1>
Name: <%= @store.name %><br>
Description: <%= @store.description %><br>
Email: <%= @store.email %><br>
Phone: <%= @store.phone %><br>
URL: <%= @store.url %><br>
<p>
	Categories:<br>
	<% @store.store_categories.each do |c| %>
		<%= link_to c.title, root_store_category_path(c) %>
	<% end %>
</p>	

<p>
	<%= link_to "Edit Store", edit_store_path(@store) %>
	<%= link_to "Delete Store", store_path(@store), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>


<%= link_to "Back to Stores", stores_path %>