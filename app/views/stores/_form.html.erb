<%= nested_form_for @store do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :description %><br>
	<%= f.text_field :description %><br>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
	<%= f.label :phone %><br>
	<%= f.text_field :phone %><br>
	<%= f.label :url %><br>
	<%= f.text_field :url %><br>
	
	<h3> Categories</h3>
	<% @store.categorizings.each do |categorizing| %>
		<%= f.fields_for :categorizings, categorizing do |ct| %>
			<%= ct.collection_select :store_category_id, StoreCategory.all, :id, :title %>
			<%= ct.link_to_remove "Remove Category" %>
		<% end %>
	<% end %>
	<p><%= f.link_to_add "Add Category", :categorizings %></p>
	<%= f.submit %>
<% end %>

